#cloud-config

yum_repos:
  ansible:
    baseurl: https://releases.ansible.com/ansible/rpm/release/epel-7-x86_64/
    enabled: false
    gpgcheck: true
    gpgkey: https://releases.ansible.com/keys/RPM-GPG-KEY-ansible-release.pub
    name: Ansible releases
  okd-testing:
    baseurl: https://cbs.centos.org/repos/paas7-openshift-origin311-testing/x86_64/os/
    enabled: true
    gpgcheck: false
    name: OKD testing

package_update: true

packages:
 - NetworkManager
 - httpd-tools
 - openssh-server
 - wget
 - git
 - net-tools
 - bind-utils
 - yum-utils
 - iptables-services
 - bridge-utils
 - bash-completion
 - kexec-tools
 - sos
 - psacct
 - docker-1.13.1
 - lvm2
 - gettext

write_files:
 - path: /etc/sysconfig/okd-setup
   owner: root:root
   permissions: 0600
   content: |
     PUBLIC_NAME="$PUBLIC_NAME"
     PRIVATE_KEY_BASE="$PRIVATE_KEY_BASE"
     DEVELOPER_PASSWORD="$DEVELOPER_PASSWORD"
     ADMIN_PASSWORD="$ADMIN_PASSWORD"
     LOCAL_PV_COUNT="$LOCAL_PV_COUNT"
     LOCAL_PV_SIZE="$LOCAL_PV_SIZE"

runcmd:
 - [ bash, "-c", "echo STORAGE_DRIVER=overlay > /etc/sysconfig/docker-storage-setup" ]

 - [ yum, "-y", update" ]
 - [ yum, "-y", install, "https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm" ]
 - [ sed, "-i", "-e", "s/^enabled=1/enabled=0/", /etc/yum.repos.d/epel.repo ]

# Install Ansible 2.6.x and dependencies. Either from EPEL or from Ansible.

 - [ yum, "-y", "--enablerepo=epel", "--enablerepo=ansible", install, pyOpenSSL, "ansible-2.6.7" ]

 - [ systemctl, start, NetworkManager ]
 
 - - bash
   - '-c'
   - >-
     sed -i '/^OPTIONS=/d' /etc/sysconfig/docker && echo "OPTIONS=' --selinux-enabled       --signature-verification=False --log-opt max-size=50m --log-opt max-file=5'" >> /etc/sysconfig/docker

 - [ systemctl, enable, docker.service ]
 - [ systemctl, start, docker.service ]

 - [ git, clone, "--recursive", "-b", "${BRANCH_NAME}", "https://github.com/ctron/hcloud-okd-setup.git", "/root/hcloud-okd-setup.git" ]
 - [ "/root/hcloud-okd-setup.git/fix-selinux/run-on-boot" ]
